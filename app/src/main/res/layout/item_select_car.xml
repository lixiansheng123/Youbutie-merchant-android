<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/id_letter"
        style="@style/text_black_16sp"
        android:layout_width="match_parent"
        android:layout_height="33dp"
        android:background="@color/greyede9e4"
        android:gravity="center_vertical"
        android:paddingLeft="21dp"
        android:text="A"
        android:textColor="@color/black574d4c" />

    <RelativeLayout
        android:id="@+id/id_click_item"
        android:layout_width="match_parent"
        android:layout_height="43dp"
        android:background="@drawable/selector_bg_white_item"
        android:paddingLeft="21dp"
        android:paddingRight="21dp">

        <TextView
            android:id="@+id/id_car_name"
            style="@style/text_black_14sp"
            android:layout_centerVertical="true"
            android:text="奥迪"
            android:textColor="@color/grey938381" />

        <ImageView
            android:id="@+id/id_gougou"
            style="@style/w_h_ww"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/icon_yellow_gou" />
    </RelativeLayout>


    <View
        android:id="@+id/id_line"
        style="@style/line_grey_1px"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp" />


</LinearLayout>
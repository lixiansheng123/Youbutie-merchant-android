<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/greyecebe4"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="33dp"
        android:layout_marginLeft="33dp"
        android:layout_marginRight="33dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/shape_round_white_band_frame"
        android:drawableLeft="@drawable/icon_grey_search"
        android:gravity="center"
        android:hint="@string/str_search_address_book_friend"
        android:orientation="horizontal"
        android:paddingLeft="12dp"
        android:singleLine="true"
        android:textColor="@color/grey938381"
        android:textColorHint="@color/greycbc0bf"
        android:textSize="14sp" />

    <ExpandableListView
        android:id="@+id/id_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:divider="@null" />
</LinearLayout>

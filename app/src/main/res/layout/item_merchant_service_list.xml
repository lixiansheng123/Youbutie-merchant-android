<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="56dp"
    android:background="@color/whiteffffff"
    android:paddingLeft="11dp"
    android:paddingRight="11dp">

    <android.support.v7.widget.CardView
        android:id="@+id/id_carview_pic"
        android:layout_width="39dp"
        android:layout_height="39dp"
        android:layout_centerVertical="true"
        app:cardBackgroundColor="#00ff00"
        app:cardCornerRadius="5dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/id_service_pic"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:layout_marginLeft="5dp"
                android:scaleType="centerInside"
                android:src="@drawable/icon_service_banjinpenqi" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>

    <TextView
        android:id="@+id/id_service_name"
        style="@style/text_deep_grey_14sp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="14dp"
        android:layout_toRightOf="@+id/id_carview_pic"
        android:text="洗车"
        android:textSize="16sp" />

    <ToggleButton
        android:id="@+id/id_togglebtn"
        android:layout_width="56dp"
        android:layout_height="28dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="5dp"
        android:background="@drawable/selector_service_switch"
        android:checked="true"
        android:textOff=""
        android:textOn="" />

    <TextView
        android:id="@+id/id_service_time_desc"
        style="@style/text_black_16sp"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dp"
        android:layout_toLeftOf="@+id/id_togglebtn"
        android:text="@string/str_idle_time"
        android:textColor="@color/black81706e" />

    <View
        style="@style/line_grey_1px"
        android:layout_alignParentBottom="true" />


</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/greyf0eeeb"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingRight="12dp">


        <LinearLayout
            android:id="@+id/ll_left_layout"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="250"
            android:clickable="true"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/id_likeBack_headView"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:clickable="false"
                android:focusable="false" />
        </LinearLayout>


        <TextView
            android:id="@+id/id_title_headView"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="580"
            android:gravity="center"
            android:textColor="@color/whiteffffff"
            android:textSize="16sp" />


        <LinearLayout
            android:id="@+id/ll_right_layout"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="250"
            android:clickable="true"
            android:gravity="center_vertical|right"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_right_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="2dp"
                android:text="@string/str_save"
                android:textColor="@color/yellowf0c010"
                android:textSize="14sp"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/iv_more_headview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone" />
        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_alignParentBottom="true"
        android:background="@color/greyd6d1ca" />
</RelativeLayout>